<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" metadata-complete="false" version="2.5">
  <welcome-file-list>
    <welcome-file>/manager/index.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>com.longlongyu.add.BlogListener</listener-class>
  </listener>
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>add</servlet-name>
    <jsp-file>/manager/manager.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>add</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>signin</servlet-name>
    <jsp-file>/manager/signin.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>signin</servlet-name>
    <url-pattern>/signin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/manager/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>manager</servlet-name>
    <jsp-file>/manager/post-edit.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>manager</servlet-name>
    <url-pattern>/post-edit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>post</servlet-name>
    <jsp-file>/manager/post.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>post</servlet-name>
    <url-pattern>/post/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>userpage</servlet-name>
    <jsp-file>/manager/user-page.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>userpage</servlet-name>
    <url-pattern>/user-page</url-pattern>
  </servlet-mapping>
</web-app>